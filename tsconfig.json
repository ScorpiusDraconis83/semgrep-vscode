{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es2021", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": ".",
